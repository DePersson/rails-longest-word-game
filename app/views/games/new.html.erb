<h1>New game</h1>

<div class="container">
  <% @letters.each do |letter| %>
    <p><%= letter %></p>
  <% end %>
</div>

<p>Wich is the longest word you can find?</p>
<div class="container">
  <form action="/score" method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input class="edit_fld" type="text" name="word">
    <input class="submit_btn" type="submit" value="Play!">
  </form>
</div>
